<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/travel_plan_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:text="Dates: " />

    <TextView
        android:id="@+id/travel_plan_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Notes: " />

    <TextView
        android:id="@+id/travel_plan_destinations_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destinations:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_destinations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/travel_plan_accommodations_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accommodations:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_accommodations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/travel_plan_dining_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dining Reservations:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_dining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
